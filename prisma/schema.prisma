generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  searches  Search[]
  analytics PageVisit[]
}

model Search {
  id                    String   @id @default(cuid())
  searchId              String   @unique
  userId                String?
  user                  User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  query                 String
  category              String
  status                String
  primaryRecommendation Json?
  aiSummarySnapshot     String?
  aiInsightsSnapshot    Json?
  alternativesSnapshot  Json?
  createdAt             DateTime @default(now())
  analytics             SearchAnalytics[]
  @@index([userId])
  @@index([searchId])
  @@index([category])
  @@index([createdAt])
}

model SearchAnalytics {
  id        String   @id @default(cuid())
  searchId  String
  search    Search   @relation(fields: [searchId], references: [id], onDelete: Cascade)
  event     String
  payload   Json?
  createdAt DateTime @default(now())
  @@index([searchId])
  @@index([event])
}

model PageVisit {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  path      String
  createdAt DateTime @default(now())
  @@index([userId])
  @@index([path])
  @@index([createdAt])
}
